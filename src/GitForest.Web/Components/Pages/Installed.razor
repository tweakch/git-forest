@page "/installed"
@using GitForest.Core
@using GitForest.Core.Persistence
@using GitForest.Application.Features.Plans
@using GitForest.Mediator
@inject IMediator Mediator

<PageTitle>Installed Plans - git-forest</PageTitle>

<h1>Installed Plans</h1>

<p>View and manage plans that are currently installed in your forest.</p>

@if (isLoading)
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @errorMessage
    </div>
}
else if (plans == null || plans.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        No plans are currently installed. Go to <a href="/plans">Plans Catalog</a> to install a plan.
    </div>
}
else
{
    @if (!string.IsNullOrWhiteSpace(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(operationError))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @operationError
            <button type="button" class="btn-close" @onclick="() => operationError = null"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Version</th>
                    <th>Installed Date</th>
                    <th>Source</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plan in plans)
                {
                    <tr>
                        <td><strong>@plan.Id</strong></td>
                        <td>@plan.Version</td>
                        <td>@plan.InstalledDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td><small class="text-muted">@plan.Source</small></td>
                        <td>
                            <button class="btn btn-sm btn-success" 
                                    @onclick="() => ReconcilePlan(plan.Id)" 
                                    disabled="@(reconcilingPlanId == plan.Id)">
                                @if (reconcilingPlanId == plan.Id)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                    <span>Reconciling...</span>
                                }
                                else
                                {
                                    <span>Reconcile</span>
                                }
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <p class="text-muted">
            <strong>Total installed plans:</strong> @plans.Count
        </p>
    </div>
}

@code {
    private List<Plan>? plans;
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;
    private string? operationError;
    private string? reconcilingPlanId;

    protected override async Task OnInitializedAsync()
    {
        await LoadInstalledPlans();
    }

    private async Task LoadInstalledPlans()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var query = new ListPlansQuery();
            plans = (await Mediator.Send(query)).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ReconcilePlan(string planId)
    {
        reconcilingPlanId = planId;
        operationError = null;
        successMessage = null;

        try
        {
            var command = new ReconcilePlanCommand(planId, DryRun: false);
            var result = await Mediator.Send(command);
            successMessage = $"Reconcile completed for '{planId}'! Created: {result.PlantsCreated}, Updated: {result.PlantsUpdated}";
        }
        catch (Exception ex)
        {
            operationError = ex.Message;
        }
        finally
        {
            reconcilingPlanId = null;
        }
    }
}
